{
  "name": "@aituber-onair/kizuna",
  "version": "0.0.1",
  "description": "A sophisticated bond system (çµ† - Kizuna) for managing relationships between users and AI characters.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:clean": "rm -rf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly --declaration --declarationDir dist/types",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "fmt": "biome format --write ./src",
    "fmt:check": "biome format ./src",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --fix ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --fix ./src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "aituber",
    "points",
    "gamification",
    "user-engagement",
    "chat",
    "streaming"
  ],
  "author": "shinshin86 (https://github.com/shinshin86)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinshin86/aituber-onair.git",
    "directory": "packages/kizuna"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^18.15.10",
    "@vitest/coverage-v8": "^1.3.1",
    "typescript": "^5.0.0",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
